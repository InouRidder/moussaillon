<!-- app/views/products/_form.html.erb -->

<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Add a product
        </h1>
        <ol class="breadcrumb">
          <li>
            <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
          </li>
          <li class="active">
            <i class="fa fa-desktop"></i> Products
          </li>
          <li>
            <i class="fa fa-desktop"></i> New
          </li>
        </ol>
      </div>
    </div>
    <!-- /.row -->

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <h1>Add Product</h1>
      <%= simple_form_for @product, html: {class: 'form-horizontal'} do |f| %>
      <%= f.input :name, :input_html => {class: "form-control", placeholder: "Name" }, label: false %>
      <br>
      <%= f.input :description, :input_html => {class: "form-control", placeholder: "Description" }, label: false %>
      <br>
      <%= f.input :photo, :input_html => { class: "form-control-file" } %>
      <%= f.input :photo_cache, as: :hidden %>
      <br>
      <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>

  </div>
  <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->





