 <!-- Popular Products -->
 <section class="shop-page padding-top-50 padding-bottom-200">
  <div class="container">
    <div class="item-display">

      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <h2>
            <%= @info_title %>
            </h2>
          </div>
        </div>
        <div class="col-xs-6">
          <span class="product-num">
            Showing 1 - of <%= @products.count %> products
          </span>
        </div>

        <!-- Products Select -->
        <div class="col-xs-6">
          <div class="pull-right">

            <!-- Short By -->
            <select name="categories" class="selectpicker" onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);">
              <option value="" selected disabled hidden>Category</option>
              <option value="/collection"><%= link_to 'All', collection_path %></option>
              <option value="/collection?type=sleep"><%= link_to 'Sleep', collection_path(type: "sleep") %></option>
              <option value="/collection?type=eat"><%= link_to 'Eat', collection_path(type: "eat") %></option>
              <option value="/collection?type=living"><%= link_to 'Living', collection_path(type: "living" ) %></option>
              <option value="/collection?type=cook"><%= link_to 'Cook', collection_path(type: "cook" ) %></option>
              <option value="/collection?type=sit"><%= link_to 'Sit', collection_path(type: "sit" ) %></option>
            </select>
          </div>
        </div>
      </div>

      <!-- Popular Item Slide -->

      <div class="shop-items row">

        <% @products.each do |product| %>

        <!-- Item -->
        <div class="col-md-6">
          <div class="item">
            <!-- Item Name -->
            <div class="item-name"> <a href="#."><%= product.name %></a>
              <p><%= product.description %></p>
            </div>
            <!-- Item img -->
            <%= link_to product_path(product) do %>
            <div class="item-img">
              <img class="img-1" src=<%= cl_image_path product.photos.first.path unless product.photos.blank? %> alt="" style="width: 100%; height: 400px;">
              <div class="inn">
                <a href="<%= product_path(product) %>"> See more <a href="#.">
              </a>
            </div>
          </div>
          <% end %>
          <!-- Price -->
          <span class="price"><small>â‚¬</small><%= product.price %></span>
        </div>
      </div>
      <% end %>

      <!-- Pagination -->
<!--         <ul class="pagination in-center">
          <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
        </ul> -->

      </div>
    </div>
  </div>
</section>

