 <!-- Popular Products -->
 <section id="shop-page" class="shop-page padding-top-50 padding-bottom-200" style="padding-right: 80px">
  <div class="container">
    <div class="item-display">
      <div class="row">
        <div class="col-xs-12">
          <div class="text-center" style="margin-left: 40px;">
            <h2>
            <%= @info_title %>
            </h2>
          </div>
        </div>
        <div class="col-xs-6">
          <span class="product-num">
            Showing 1 - of <%= @products.count %> products
          </span>
        </div>

        <!-- Products Select -->
       <!--  -->
      </div>

      <!-- Popular Item Slide -->

      <div class="shop-items row">

        <% @products.each do |product| %>

        <!-- Item -->
        <div class="col-md-6">
          <div class="item">
            <!-- Item Name -->
            <div class="item-name"> <a href="#."><%= product.name %></a>
            </div>
            <!-- Item img -->
            <%= link_to product_path(product) do %>
            <div class="item-img">
              <img class="img-1" src=<%= cl_image_path product.photos.first.path unless product.photos.blank? %> alt="" style="width: 100%; max-height: 400px;">
              <div class="inn">
                <a href="<%= product_path(product) %>"> Show <a href="#.">
              </a>
            </div>
          </div>
          <% end %>
          <!-- Price -->
        </div>
      </div>
      <% end %>

      <!-- Pagination -->
<!--         <ul class="pagination in-center">
          <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
        </ul> -->

      </div>
    </div>
  </div>
</section>

<script>
  // Hiding video on mobile
const button = document.getElementById('navbar-toggle-btn')
const shopPage = document.getElementById('shop-page')

button.addEventListener("click", function(event){
  if (shopPage.style.display == "") {
      shopPage.style.display = "none";
  } else {
      shopPage.style.display = "";
  }
});
</script>

<% content_for(:after_js) do %>
  <script>
    $("#<%= @query %>").addClass('nav-active');
  </script>
<% end %>
