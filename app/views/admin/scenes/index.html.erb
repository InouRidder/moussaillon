<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->

    <!-- /#page-wrapper -->

    <div class="jumbotron">
      <table class="table table-striped table-hover">
        <p><a href="/admin/scenes/new" class="btn btn-primary" role="button"> Add a new scene! &raquo;</a> </p>
        <thead z>
          <tr>
           <th><h2>All Scenes</h2></th>
         </tr>
       </thead>

       <% @scenes.each do |scene| %>
       <a href="/admin_scenes/<%= scene.id %>">
        <thead class="thead-inverse">
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Destroy</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= scene.title %></td>
            <td><%= scene.description %></td>
            <td><%= link_to 'Show', admin_scene_path(scene),
              :class => "btn btn-primary"%></td>
              <td><%= link_to 'Edit', edit_admin_scene_path(scene),
                :class => "btn btn-warning"%></td>
                <td><%= link_to 'Destroy', admin_scene_path(scene),
                  confirm: 'Are you sure?',
                  method: :delete,
                  :class => "btn btn-danger"%></td>
                </tr>
              </tbody>
              <% end %>
            </table>
          </div>






