<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
      <small><%= cl_image_tag @scene.banner, width: 100, height: 50 %></small>
     </div>
     </div>
   <div class="row">
     <div class="col-lg-12">
      <small> <%= @scene.products.each do |product|%></small>
      <h2><%= product.name %></h2>
      <h2><%= product.price %>â‚¬</h2>
      <p><%= product.description %></p>
      <%end%>
    </div>
    </div>

    <div class="row">
      <div class="col-lg-12 text-center">
        <h1 class="page-header">
          <%= @scene.title %>
          <%= @scene.description %>

          <%= simple_form_for @scene,  :url => url_for(:action => 'update', :controller => 'scenes'), :method => :patch,  html: {class: 'form-horizontal'} do |f| %>
            <%= f.input :products, collection: @products %>
            <%= f.submit %>
          <% end %>

        </h1>
      </div>
    </div>
  </div>
</div>




