<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
       <h1 class="page-header">
          <%= @scene.title %>
          <%= @scene.description %>
        </h1>
     <%= cl_image_tag @scene.banner unless @scene.banner.blank? %>
      </div>
     </div>
   <div class="row">
     <div class="col-sm-6 pull-left ">
     <% @scene.products.each do |product|%>

      <h2><%= product.name %></h2>
      <p><%= product.price %>â‚¬</p>
      <p><%= product.description %></p>
      <%end%>
    </div>
    <div class="col-sm-6 text-center ">

          <%= simple_form_for @scene,  :url => url_for(:action => 'update', :controller => 'scenes'), :method => :patch,  html: {class: 'form-horizontal'} do |f| %>
            <%= f.input :products, collection: @products %>
            <%= f.submit  class: "btn btn-primary"%>
          <% end %>
     </div>
  </div>
  </div>
</div>




