<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
         <%= cl_image_tag @scene.banner, height: 500, width: 900 unless @scene.banner.blank? %>
         <h1 class="page-header">
          <%= @scene.title %>
          <%= @scene.description %>
        </h1>
      </div>
    </div>
    <div class="row">
    <div class="col-sm-6 col-xs-12">
       <% @scene.products.each do |product|%>
      <div class="col-xs-6 pull-left ">
       <h2><%= product.name %></h2>
       <p><%= product.price %>â‚¬</p>
       <p><%= product.description %></p>
       <%= link_to "Remove product", remove_product_admin_scene_path(product), class: 'btn btn-danger' %>
      </div>
       <%end%>
      </div>
      <div class="col-sm-6 text-center ">
      <h4>
        Add a new product
      </h4>
        <%= simple_form_for @scene, :url => url_for(:action => 'add_product', :controller => 'scenes'), :method => :patch,  html: {class: 'form-horizontal'} do |f| %>
          <%= f.input :products, collection: @products, label: false, input_html: { class: 'dropdown-form-scene-show'}  %>
          <%= f.submit 'Add Product', class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>




