<div class="container">
  <div class="jumbotron">
    <div class="row">
     <div class= "col-xs-12 col-sm-6 col-sm-offset-3">
       <h1>Edit Scene</h1>
       <%= simple_form_for @scene, :url => url_for(:action => 'update', :controller => 'scenes'), :method => :patch,  html: {class: 'form-horizontal'} do |f| %>
       <%= f.input :title, :input_html => {class: "form-control", placeholder: "Name" }, label: false %>
       <br>
       <%= f.input :description, :input_html => {class: "form-control", placeholder: "Description" }, label: false %>
       <br>
       <%= f.input :banner, :input_html => { class: "form-control-file" } %>
       <%= f.input :banner_cache, as: :hidden  %>
       <br>
       <%= f.submit class: "btn btn-primary" %>
       <% end %>
     </div>
   </div>
 </div>
</div>
