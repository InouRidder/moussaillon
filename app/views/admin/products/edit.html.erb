<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="container">
  <div class="jumbotron">
    <div class="row">
     <div class= "col-xs-12 col-sm-6 col-sm-offset-3">
       <!-- TODO: GOOGLE SYNTAX TO SEND DATA TO ADMIN_CONTROLLER -->
       <h1>Edit Product</h1>
       <%= simple_form_for @product, :url => url_for(:action => 'update', :controller => 'products'), :method => :patch,  html: {class: 'form-horizontal'} do |f| %>
       <%= f.input :name, :input_html => {class: "form-control", placeholder: "Name" }, label: false %>
       <br>
       <%= f.input :description, :input_html => {class: "form-control", placeholder: "Description" }, label: false %>
       <br>
       <%= f.input :price, :input_html => {class: "form-control", placeholder: "Price" }, label: false %>
       <br>
       <%= f.input :description, :input_html => {class: "form-control", label: "Description"  } %>
       <br>
        <%= f.input :category, collection: ["eat", "sleep", "live", "sit", "cook"], :input_html => {class: "form-control", label: "Category"  } %>
        <br>
       <%= f.input :photos, as: :attachinary, :input_html => { class: "form-control-file" } %>

       <br>
       <%= f.submit class: "btn btn-primary" %>
       <% end %>
     </div>
   </div>
 </div>
</div>
